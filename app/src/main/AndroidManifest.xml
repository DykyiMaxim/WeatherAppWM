<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mDykyi.weatherapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name="com.mDykyi.weatherapp.WeatherApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_sunny"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_sunny"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeatherWMApp">
        <activity
            android:name="com.mDykyi.weatherapp.presentation.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.WeatherWMApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>